<% include ./partials/header.ejs %>
    
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Maak promotie</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/posts" method="POST" id="partnerform">
                    <div class="form-group">
                        <input class="form-control" type="text" name="instaname" placeholder="Instagram naam">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="url" name="link" placeholder="Link vb. https://www.instagram.com/p/Bms7EccCnF3/?taken-by=2brand.be">
                    </div>
                    
                    <div class="form-group">
                        <select name="partner" form="partnerform" class="form-control">
                            <% partners.forEach(function(partner){ %>
                                <option value="<%= partner.name %>"><%= partner.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="voordeel" form="partnerform" class="form-control">
                            <% partners.forEach(function(partner){ %>
                                <option value="<%= partner.voordeel %>"><%= partner.voordeel %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <!-- <a href="/posts">Go Back</a> -->
            </div>
        </div>
    </div>

<% include ./partials/footer.ejs %>